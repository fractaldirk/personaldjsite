    <td><%= link_to 'Listen', list.listen_link, :target => "_blank", :class => "btn btn-inverse btn-mini" %></td>
    <td><%= link_to list.title, list %></td>
    <td><%= list.artist %></td>
    <td><%= list.category %></td>
    <td><%= link_to 'Vote', "#" %></td>
